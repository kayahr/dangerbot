{
    "name": "@headcr4sh/dangerbot",
    "version": "0.0.1-alpha.1",
    "description": "Discord Chat Bot for Elite:Dangerous",
    "private": true,
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "jest",
        "coverage": "jest --coverage",
        "cspell": "cspell '**/*'",
        "prepare": "npm run -s clean && npm run -s compile",
        "test": "npm run -s cspell && npm run -s check",
        "dist": "webpack",
        "start": "nodemon lib/main/server"
    },
    "main": "lib/main/server",
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testEnvironment": "jest-environment-node-single-context",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@kayahr/jest-matchers": "1.0.0",
        "@types/jest": "26.0.15",
        "@types/node": "14.14.5",
        "@types/ws": "7.2.8",
        "cspell": "4.1.2",
        "jest": "26.6.1",
        "jest-environment-node-single-context": "26.2.0",
        "jest-extended": "0.11.5",
        "nodemon": "2.0.6",
        "rimraf": "3.0.2",
        "typescript": "4.0.5"
    },
    "dependencies": {
        "discord.js": "^12.4.1",
        "tslib": "^2.0.3"
    }
}
